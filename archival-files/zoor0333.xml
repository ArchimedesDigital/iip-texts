               <physDesc><!-- ********* <objectDesc> ********* -->
                  <objectDesc ana="#tombstone">
                     <supportDesc ana="#stone.other">
                        
                        <support>
                           <p>White sandstone, irregular in shape, pointed at the top</p>
                           <dimensions type="surface" unit="cm">
                              <height>46</height>
                              <width>37</width>
                              <depth>5</depth>
                           </dimensions>
                        </support>
                        <condition ana="#complete.broken">
                           <p>Broken in the middle of the left and the upper right sides. The
                              inscribed surface, which has been smoothed, is for the most part
                              covered with lichens.</p>
                        </condition>
                     </supportDesc>
                     <!-- ********* <layoutDesc> ********* -->
                     <layoutDesc>
                        <layout columns="1" writtenLines="8">
                           <p/>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
                  <!-- ********* <handDesc> ********* -->
                  <handDesc>
                     <handNote ana="#impressed.inscribed">
                        <dimensions type="letter" extent="height" atLeast="1" atMost="3"/>
                        <p>Lines 1 and 5 are painted over in red. Traces of red paint are also
                           visible on lines 2 and 8. Mixture of round and square alphabets. The
                           letters are clearly cut but ascendingly aligned from the second line
                           onwards. </p>
                     </handNote>
                  </handDesc>
                  <!-- ********* <decoDesc> ********* -->
                  <decoDesc>
                     <decoNote ana="#xx">
                        <ab>Palm Branch</ab>
                        <locus>On the left margin, depicted vertically to the first four
                           lines</locus>
                     </decoNote>
