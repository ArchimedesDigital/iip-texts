               <!-- ********* <msContents> ********* -->
               <msContents>
                  <textLang mainLang="grc"/>
                  <msItem class="#funerary.epitaph" ana="#christian">
                     <p>Zoora, mid-5th century CE. Tombstone. Funerary (Epitaph).</p>
                  </msItem>
               </msContents>
               <!-- ********* <physDesc> ********* -->
               <physDesc><!-- ********* <objectDesc> ********* -->
                  <objectDesc ana="#tombstone">
                     <supportDesc ana="#stone.other">
                        <support>
                           <p>Greenish-yellow sandstone, rectangular in shape</p>
                           <dimensions type="surface" unit="cm">
                              <height>47</height>
                              <width>27.5</width>
                              <depth>9</depth>
                           </dimensions>
                        </support>
                        <condition ana="#complete.broken">
                           <p>Broken at the lower left corner and chipped on the left side. The
                              inscribed surface is chipped in the middle of the right part and
                              weathered on the lower half of the left part, in both cases with loss
                              of text</p>
                        </condition>
                     </supportDesc>
                     <!-- ********* <layoutDesc> ********* -->
                     <layoutDesc>
                        <layout columns="1" writtenLines="10">
                           <p/>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
                  <!-- ********* <handDesc> ********* -->
                  <handDesc>
                     <handNote ana="#impressed.inscribed">
                        <dimensions type="letter" extent="height" atLeast="0.7" atMost="2"/>
                        <p>The text is engraved with faint traces of red paint and follows the
                           square alphabet. The letters are fairly well cut and aligned</p>
                     </handNote>
                  </handDesc>
                  <!-- ********* <decoDesc> ********* -->
                  <decoDesc>
                     <decoNote ana="#xx">
                        <ab>Hollowed outlined cross, with traces of red paint</ab>
                        <locus>Above the inscription</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Cross with free-standing triangular bars</ab>
                        <locus>Above the inscription</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Two linear crosses</ab>
                        <locus>Above the inscription</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Cross</ab>
                        <locus>At the end of line 1</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Plain outlined cross inscribed in the cavity formed by a wreath in
                           relief</ab>
                        <locus>Below the text, in the middle</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Heraldic birds</ab>
                        <locus>Flanking the wreath on each side. The left one is almost totally
                           effaced</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Two incised ribbons preserving remains of red colour</ab>
                        <locus>Below the wreath</locus>
                     </decoNote>
                  </decoDesc>
               </physDesc>
               <!-- ********* <history> ********* -->
               <history>
                  <origin>
                     <date period="http://n2t.net/ark:/99152/p0m63njjcn4" notBefore="0430" notAfter="0470">Mid-5th century CE</date>
                     <placeName>
                        <region>Negev</region>
                        <settlement ref="http://pleiades.stoa.org/places/697768">Zoora</settlement>
                        <geogName type="site">An Naq Cemetery</geogName>
                        <geogFeat type="locus"/>
                     </placeName>
                     <p>Found in the northwest corner of the Bronze Age, Byzantine and Islamic
                        cemetery in the An Naq neighborhood south of the Wadi al-Hasa, probably in
                        secondary use in later graves.</p>
                  </origin>
                  <provenance>
                     <placeName/>
                     <date/>
                  </provenance>
               </history>
