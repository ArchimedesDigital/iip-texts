                    <!--  *************************************  <physDesc>  ********************************* -->
                    <physDesc>
                        <objectDesc ana="#tombstone">
                            <supportDesc ana="#stone.other">
                                <support>
                                    <p>Purple sandstone, almost square in shape</p>
                                    <dimensions type="surface" unit="cm">
                                        <height>31</height>
                                        <width>36</width>
                                        <depth>4</depth>
                                    </dimensions>
                                </support>
                                <condition ana="#complete.broken">
                                    <p>Chipped at the lower part and broken at the upper left side.
                                        The front surface is flaked off at the bottom and
                                        extensively covered with lichens and salt crystals</p>
                                </condition>
                            </supportDesc>
                            <layoutDesc>
                                <layout columns="1" writtenLines="8">
                                    <p>The epitaph occupies the upper half of the stone</p>
                                </layout>
                            </layoutDesc>
                        </objectDesc>
                        <!--  *************************************  <handDesc>  *********************************  -->
                        <handDesc>
                            <handNote ana="#impressed.inscribed">
                                <p>The letters are small (with the exception of the word "shalom" in
                                    bigger characters in the last line), irregularly spaced and
                                    ascendently aligned</p>
                                <dimensions type="letter" extent="height" unit="cm" atLeast="0.6" atMost="2.2"/>
                            </handNote>
                        </handDesc>
                        <!--  *************************************  <decoDesc>  *********************************  -->
                        <decoDesc>
                            <decoNote>
                                <ab>Red paint</ab>
                                <locus>Over the text and the symbols</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Deeply engraved and red painted frame lines, internally and
                                    externally decorated with a zigzag pattern</ab>
                                <locus>Around the inscription, preserved at the bottom and on the
                                    left side of the stone</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Traces of an Ark of the Covenant</ab>
                                <locus>Discernible below the inscription, to the left</locus>
                            </decoNote>
