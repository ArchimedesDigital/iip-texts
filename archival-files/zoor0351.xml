               <choice>
                  <reg>Μνημεῖον</reg>
                  <orig>Μνημῖων</orig>
               </choice> Παύ<lb break="no"/>λου <choice>
                  <reg>Ἀβδαλμι<lb break="no"/>θάβου</reg>
                  <orig>Ἀβδαλμί<lb break="no"/>θαβος</orig>
               </choice>, <choice>
                  <reg>Πετραί<lb break="no"/>ου</reg>
                  <orig>Πετρέ<lb break="no"/>ος</orig>
               </choice>, <choice>
                  <reg>ἐτῶν</reg>
                  <orig>ἠτῶν</orig>
