               <!-- ********* <physDesc> ********* -->
               <physDesc><!-- ********* <objectDesc> ********* -->
                  <objectDesc ana="#tombstone">
                     <supportDesc ana="#stone.other">
                        <support>
                           <p>Reddish sandstone, almost square in shape</p>
                           <dimensions type="surface" unit="cm">
                              <height>37</height>
                              <width>31</width>
                              <depth>4</depth>
                           </dimensions>
                        </support>
                        <condition ana="#complete.broken">
                           <p>The inscribed surface is chipped all around, with letters missing at
                              the end of lines 1-3. Partial damage of letters, caused by small deep
                              hollows on the stone, on lines 2, 6 and 8. </p>
                        </condition>
                     </supportDesc>
                     <!-- ********* <layoutDesc> ********* -->
                     <layoutDesc>
                        <layout columns="1" writtenLines="8">
                           <p>The text is set between incised guide-lines bearing traces of red
                              paint. Due to miscalculation, the space between the last two
                              guide-lines has been left uninscribed. </p>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
                  <!-- ********* <handDesc> ********* -->
                  <handDesc>
                     <handNote ana="#impressed.inscribed">
                        <dimensions type="letter" extent="height" atLeast="0.9" atMost="2.4"/>
                        <p>The text is deeply engraved with traces of red paint in lines 1, 4 and 7.
                           Letters well cut and aligned. Round script with a small omicron. </p>
                     </handNote>
                  </handDesc>
               </physDesc>
