               <!-- ********* <physDesc> ********* -->
               <physDesc><!-- ********* <objectDesc> ********* -->
                  <objectDesc ana="#tombstone">
                     <supportDesc ana="#stone.other">
                        <support>
                           <p>Yellow and purple sandstone, almost square in shape, rounded at the
                              top</p>
                           <dimensions type="surface" unit="cm">
                              <height>34.5</height>
                              <width>31.5</width>
                              <depth>7</depth>
                           </dimensions>
                        </support>
                        <condition ana="#complete.intact">
                           <p/>
                        </condition>
                     </supportDesc>
                     <!-- ********* <layoutDesc> ********* -->
                     <layoutDesc>
                        <layout columns="1" writtenLines="8">
                           <p>The first line of the text is equipped with a guide-line</p>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
                  <!-- ********* <handDesc> ********* -->
                  <handDesc>
                     <handNote ana="#impressed.inscribed">
                        <p>Lines 1, 4 and 7 preserve traces of red colour. Mixed square and round
                           alphabet. The letters are small, carelessly executed and aligned,
                           especially towards the end, where they become almost unintelligible,
                           probably a sign of the letter-cutter's unskillfulness and illiteracy.</p>
                     </handNote>
                  </handDesc>
                  <decoDesc>
                     <decoNote>
                        <ab>Square frame</ab>
                        <locus>Around inscription, engraved on the three sides and red painted at
                           the bottom</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Incised vertical line</ab>
                        <locus>Partially preserved, it runs in parallel to the left frame line and
                           may have been part of an earlier inscription's frame</locus>
                     </decoNote>
                     <decoNote>
                        <ab>Incised and re painted guide-line</ab>
                        <locus>Below the first line of the text</locus>
                     </decoNote>
                  </decoDesc>
               </physDesc>
