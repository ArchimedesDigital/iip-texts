                    <!--  *************************************  <physDesc>  ********************************* -->
                    <physDesc>
                        <objectDesc ana="#tombstone">
                            <supportDesc ana="#stone.other">
                                <support>
                                    <p>Yellow sandstone, rectangular in shape</p>
                                    <dimensions type="surface" unit="cm">
                                        <height>37.5</height>
                                        <width>21.5</width>
                                        <depth>7</depth>
                                    </dimensions>
                                </support>
                                <condition ana="#complete.broken">
                                    <p>Broken along the right side with loss of text and at the lower left corner. Front surface originally smoothed, flaked at top and
                                        weathered on upper half.</p>
                                </condition>
                            </supportDesc>
                            <layoutDesc>
                                <layout columns="1" writtenLines="8">
                                    <p/>
                                </layout>
                            </layoutDesc>
                        </objectDesc>
                        <!--  *************************************  <handDesc>  *********************************  -->
                        <handDesc>
                            <handNote ana="#impressed.inscribed">
                                <p>Traces of red paint over the inscription and the decoration.
                                    Small symmetrical letters, carefully executed and slightly
                                    ascendingly aligned</p>
                                <dimensions type="letter" extent="height" unit="cm" atLeast="0.8" atMost="1.6"/>
                            </handNote>
                        </handDesc>
                        <!--  *************************************  <decoDesc>  *********************************  -->
                        <decoDesc>
                            <decoNote>
                                <ab>Linear frame whose upper part appears in the form of a horizontal band with a zigzag pattern</ab>
                                <locus>Around the inscription; only the left line is preserved</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Big five-branched candelabrum</ab>
                                <locus>Lower half of stone</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Bird (unclear)</ab>
                                <locus>Attached to the left leg of the candelabrum</locus>
                            </decoNote>
                        </decoDesc>
