         <div type="edition" ana="b1" xml:lang="grc" subtype="transcription" xml:id="zoor0327.transcription" corresp="#zoor0327.translation">
            <p>
               <choice>
                  <orig>Μνημῖον</orig>
                  <reg>Μνημεῖον</reg>
               </choice>
               <lb/>
               <choice>
                  <orig>Ἐνίας</orig>
                  <reg>Αἰνείου</reg>
               </choice> Παρ<lb break="no"/>θενίου <choice>
                  <orig>ἠ<lb break="no"/>τον</orig>
                  <reg>ἐτῶν</reg>
               </choice>
               <num value="23">κγ</num>, <space unit="character" quantity="1"/>
               <lb/>
               <choice>
                  <orig>ἤτους</orig>
                  <reg>ἔτους</reg>
               </choice>
               <num value="283">σπγ</num>,<lb/>μηνὸς <choice>
                  <orig>Αὐδε<lb break="no"/>νέου</orig>
                  <reg>Αὐδυναίου</reg>
               </choice>
               <num value="26">κς</num>, <space unit="character" quantity="1"/>
               <lb/>
               <expan>
                  <abbr>ἡμέ</abbr>
                  <ex>ρᾳ</ex>
               </expan>
               Δι<unclear>ός</unclear>.<lb/>
