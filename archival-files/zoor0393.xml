               <physDesc>
                  <!-- ********* <objectDesc> ********* -->
                  <objectDesc ana="#tombstone">
                     <supportDesc ana="#limestone">
                        <support>
                           <p>Rectangular block which probably served as a lintel of a funerary
                              monument</p>
                           <dimensions type="surface" unit="cm">
                              <height>26</height>
                              <width>49.5</width>
                              <depth/>
                           </dimensions>
                        </support>
                        <condition ana="#complete">
