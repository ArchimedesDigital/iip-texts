               <!-- ********* <physDesc> ********* -->
               <physDesc>
                  <!-- ********* <objectDesc> ********* -->
                  <objectDesc ana="#tombstone">
                     <supportDesc ana="#stone.other">
                        <support>
                           <p>Reddish sandstone, almost square in shape, curved at the top</p>
                           <dimensions type="surface" unit="cm">
                              <height>45.5</height>
                              <width>34.5</width>
                              <depth/>
                           </dimensions>
                        </support>
                        <condition ana="#complete.broken">
                           <p>Slightly broken at bottom</p>
                        </condition>
                     </supportDesc>
                     <!-- ********* <layoutDesc> ********* -->
                     <layoutDesc>
                        <layout columns="1" writtenLines="2">
                           <p>The name of the deceased is accommodated in the four quadrants of the
                              cross</p>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
                  <!-- ********* <handDesc> ********* -->
                  <handDesc>
                     <handNote ana="#impressed.inscribed">
                        <dimensions type="letter" extent="height" atLeast="3.5" atMost="5.5"/>
                        <p>Big, deeply incised letters with a descending alignment</p>
                     </handNote>
                  </handDesc>
                  <!-- ********* <decoDesc> ********* -->
                  <decoDesc>
                     <decoNote ana="#xx">
                        <ab>Big linear deeply engraved cross with triangular serifs</ab>
                        <locus>Occupies the front surface, dividing it into four quadrants</locus>
                     </decoNote>
                  </decoDesc>
               </physDesc>
